{
  "name": "angular-browserify-npm-seed",
  "version": "0.0.4",
  "description": "browserify angularjs and build with npm",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/redgeoff/angular-browserify-npm-seed"
  },
  "keywords": [
    "angular",
    "browserify",
    "code coverage",
    "angularjs",
    "code-coverage",
    "coverage",
    "npm",
    "mocha",
    "istanbul"
  ],
  "author": "Geoffrey Cox",
  "license": "Apache",
  "bugs": {
    "url": "https://github.com/redgeoff/angular-browserify-npm-seed/issues"
  },
  "scripts": {
    "test-node": "istanbul test ./node_modules/mocha/bin/_mocha test/test.js",
    "test-browser": "./bin/test-browser.js",
    "jshint": "jshint -c .jshintrc *.js test/test.js",
    "test": "npm run jshint && npm run test-node",
    "test-firefox": "npm run jshint && CLIENT=selenium:firefox npm run test-browser",
    "test-phantomjs": "npm run jshint && CLIENT=selenium:phantomjs npm run test-browser",
    "build-hello": "browserify examples/bundleall/hello.js -o examples/bundleall/hello-browserified.js",
    "build": "mkdir -p dist && browserify index.js --ignore angular -o dist/foobar.js && npm run min && npm run build-hello",
    "min": "uglifyjs dist/foobar.js -mc > dist/foobar.min.js",
    "dev": "browserify test/test.js > test/test-bundle.js && npm run dev-server",
    "dev-server": "./bin/dev-server.js",
    "coverage": "npm test --coverage && istanbul check-coverage --lines 100 --function 100 --statements 100 --branches 100"
  },
  "dependencies": {
    "angular": "^1.3.0",
    "es3ify": "^0.2.2",
    "q": "^1.0.1",
    "underscore": "^1.7.0"
  },
  "devDependencies": {
    "bluebird": "^3.5.0",
    "browserify": "^14.4.0",
    "chai": "~4.0.2",
    "chai-as-promised": "~7.0.0",
    "es5-shim": "^4.0.3",
    "http-server": "~0.10.0",
    "istanbul": "^0.4.5",
    "jshint": "~2.9.5",
    "mocha": "~3.4.2",
    "phantomjs": "^2.1.7",
    "request": "^2.36.0",
    "sauce-connect-launcher": "^1.2.2",
    "selenium-server": "^3.4.0",
    "uglify-js": "^3.0.20",
    "watchify": "^3.9.0",
    "wd": "^1.2.0"
  },
  "browser": {
    "crypto": false
  },
  "browserify": {
    "transform": [
      "es3ify"
    ]
  }
}
